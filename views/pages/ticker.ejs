        <script>

            let chartData = {
                labels: ["S", "M", "T", "W", "T", "F", "S"],
                datasets: [{
                    data: [117, 119, 123, 120, 124, 122, 125],
                }]
            };

            let chLine = document.getElementById("chLine");
            if (chLine) {
            new Chart(chLine, {
            type: 'line',
            data: chartData,
            options: {
                scales: {
                yAxes: [{
                    ticks: {
                    beginAtZero: false
                    }
                }]
                },
                legend: {
                    display: false
                }
            }
            });
            }
        </script>
    </body>
